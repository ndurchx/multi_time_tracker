<%= form_for(time, :url => { :action => "action" }, :method => :post) do |f| %>
    <%= f.hidden_field(:id, :value => time.id) %>
    
    <%= link_to(time.id, :action => 'edit', :id => time.id) %>
    
    <%= link_to(time.issue, issue_path(time.issue)) %>
    <%= f.text_field :comment, :required => true %>
    <%= f.select :activity_id, activity_collection_for_select_options(@time_entry), :required => true %>
    
    <% if time.active %>
      <span id="active_time_logging" class="saved_time"><%= formatted_time(time) %></span>
      <%= f.submit(l(:multi_time_tracker_check_out_button), :name => 'check_out') %>         
    <% else %>
      <span class="saved_time"><%= formatted_time(time) %></span>
      <%= f.submit(l(:multi_time_tracker_check_in_button), :name => 'check_in') %>
    <% end %>
    
    <!-- Delete and export buttons -->
    <%= f.submit l(:multi_time_tracker_export_button) ,:name => 'export' %>
    <%= f.submit l(:multi_time_tracker_destroy_button) ,:name => 'destroy' %>
<% end %>